<div class="container" style="margin-top: 50px; ">
    <div class="row">
        <div class="col-5">
            <h3 class="text-right">¡Hola {{ usuario }}!</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de Mitos</h3>
        </div>
        <div class="col-5">
            <a href="/admin/novedades/agregar" class="btn btn-sm btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Acciones</th>

                    </tr>
                </thead>
                {{#each novedades }}
                <tbody>
                    <tr>
                        <th scope="row"> {{ id }}</th>
                        <td>{{ titulo }}</td>
                        <td><a href="/admin/novedades/modificar/{{id}}"class="btn btn-sm btn-secondary" title="Modificar"><i class="fa fa-pencil"
                                    aria-hidden="true"></i></a> <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"
                                title="Eliminar"><i class="fa fa-trash-o" aria-hidden="true"></i></a></td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>
             <div class="col-5">
            <p><a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesión <i
                        class="fa fa-sign-out" aria-hidden="true"></i></a></p>
        </div>
        </div>
    </div>
</div>