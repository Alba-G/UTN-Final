<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar nuevo mito</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="form-group">
                    <label>Titulo</label>
                    <input type="text" class="form-control" name="titulo">
                </div>
                <div class="form-group">
                    <label>Subtitulo</label>
                    <textarea type="text" class="form-control" name="subtitulo"></textarea>
                </div>
                <div class="form-group">
                    <label>Cuerpo</label>
                    <textarea type="text" class="form-control" name="cuerpo"></textarea>
                </div>
                <button style="margin-top: 10px;" type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <P style="margin-top: 5px; color:red" > {{message}} </P>
            {{/if}}
        </div>
    </div>

</div>